<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="start">

                <ImageView
                    android:id="@+id/user_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_placeholder" />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/user_photo"
                    android:gravity="center"
                    android:text="Usuário X"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/header_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/user_photo"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/header_divider"
                    android:layout_marginTop="7dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/user_email_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/header_divider"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="e-Mail:"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/user_email_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_email_label"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:text="UsuárioX@exemplo.com"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/user_password_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_email_body"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Senha:"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/user_password_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_password_label"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="***************"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/user_contact_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_password_body"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Contatos:"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/user_contact_body"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/user_contact_body"
                        android:layout_below="@id/user_contact_label"
                        android:layout_margin="10dp"
                        android:gravity="start"
                        android:text="Insira suas informações de contado aqui."
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/salvar_button"
                        android:layout_width="175dp"
                        android:layout_height="36dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="24dp"
                        android:layout_marginTop="8dp"
                        android:background="#00ff00"
                        android:onClick="salvar"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Salvar"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>
