<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#F7F7F7"
            android:gravity="start">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/user_placeholder"
                android:scaleType="centerCrop"
                android:id="@+id/user_photo"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuário X"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/user_photo"
                android:id="@+id/user_name"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/user_photo"
                android:layout_marginTop="20dp"
                android:id="@+id/header_divider"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e-Mail:"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/header_divider"
                android:id="@+id/user_email_label"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UsuárioX@exemplo.com"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="italic"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/user_email_label"
                android:id="@+id/user_email_body"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/user_email_body"
                android:id="@+id/user_password_label"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="***************"
                android:textColor="#000000"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/user_password_label"
                android:id="@+id/user_password_body"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contatos"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/user_password_body"
                android:id="@+id/user_contact_label"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="Insira suas informações de contado aqui."
                android:textColor="#000000"
                android:textSize="20dp"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/user_contact_label"
                android:id="@+id/user_contact_body"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="OK"
                android:textSize="28sp"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:background="#00ff00"
                android:id="@+id/ok_button"/>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
